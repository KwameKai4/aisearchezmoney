{
  "manifest_version": 3,
  "name": "AI Search Assistant",
  "version": "1.0",
  "description": "AI-powered search assistant using OpenRouter API",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png"
  }
}
